{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "lib": ["ES2015"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "composite": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "src/controllers/.ts"]
}
